{
  "name": "@fredy/agent",
  "version": "0.1.0",
  "description": "Fredy AI Agent with MCP tool support",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx --env-file=../../.env watch src/index.ts",
    "dev:server": "tsx watch --env-file=../../.env src/server.ts",
    "build": "tsc",
    "start": "node --env-file=../../.env dist/index.js",
    "start:server": "node --env-file=../../.env dist/server.js",
    "test": "vitest",
    "mcp-server": "tsx --env-file=../../.env src/mcp-server/index.ts"
  },
  "keywords": [
    "ai",
    "agent",
    "mcp",
    "claude"
  ],
  "packageManager": "pnpm@10.28.2",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.72.1",
    "@hono/node-server": "^1.13.0",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "hono": "^4.7.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^25.2.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
