# ============================================================
# Fredy AI Agent Platform — Environment Variables Template
# Copy this file to .env and fill in your values.
# NEVER commit .env to version control.
# ============================================================

# ── LLM ─────────────────────────────────────────────────────
ANTHROPIC_API_KEY=sk-ant-...

# LLM provider for the agent service: claude | ollama
LLM_PROVIDER=claude

# Ollama settings (only required when LLM_PROVIDER=ollama)
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=llama3.2

# ── Keycloak ─────────────────────────────────────────────────
KEYCLOAK_ADMIN_PASSWORD=change-me
KEYCLOAK_OPENWEBUI_SECRET=change-me

# ── Agent Service ────────────────────────────────────────────
# Static API key used in dev mode (no Keycloak)
AGENT_API_KEY=change-me

# Session storage: memory | redis
SESSION_STORE=memory
REDIS_URL=redis://localhost:6379

# Rate limiting
RATE_LIMIT_RPM=60
RATE_LIMIT_BURST=10

# ── Embeddings ───────────────────────────────────────────────
# Provider: openai | voyage | cohere
EMBEDDING_PROVIDER=openai
EMBEDDING_API_KEY=sk-...
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536

# ── Confluence (optional) ────────────────────────────────────
CONFLUENCE_BASE_URL=
CONFLUENCE_USERNAME=
CONFLUENCE_API_TOKEN=
CONFLUENCE_SPACES=
CONFLUENCE_INCLUDE_LABELS=
CONFLUENCE_EXCLUDE_LABELS=ignore,draft,archived

# ── Qdrant ───────────────────────────────────────────────────
QDRANT_URL=http://qdrant:6333
QDRANT_COLLECTION=confluence-pages
QDRANT_API_KEY=

# ── Observability ────────────────────────────────────────────
OTEL_ENABLED=false
OTEL_EXPORTER_OTLP_ENDPOINT=http://jaeger:4318

# ── Miscellaneous ────────────────────────────────────────────
VERBOSE=false
PORT=8001
LOG_LEVEL=info
SYNC_CRON=0 */6 * * *
SYNC_FULL_ON_START=false
LOCAL_FILES_ENABLED=false
LOCAL_FILES_EXTENSIONS=.md,.txt,.html
CHUNK_MAX_TOKENS=800
CHUNK_OVERLAP_TOKENS=100
